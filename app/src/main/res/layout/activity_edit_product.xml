<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:simple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_comment"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".edit_activities.EditProductActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/space24"
                android:layout_marginRight="@dimen/space24"
                android:layout_marginTop="12dp"
                android:background="#F44336"
                android:gravity="center"
                app:corner_radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <net.wujingchao.android.view.SimpleTagImageView
                        android:id="@+id/update_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/png_natal"
                        simple:simple_corner_distance="30dp"
                        simple:simple_tag_background_color="#af27CDC0"
                        simple:simple_tag_enable="true"
                        simple:simple_tag_orientation="left_bottom"
                        simple:simple_tag_round_radius="20dp"
                        simple:simple_tag_textColor="@android:color/white"
                        simple:simple_tag_textSize="18sp"
                        simple:simple_tag_width="20dip" />


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/update_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="@dimen/space24"
                        android:background="@drawable/textstyle"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="15dp"
                        android:text="@string/Nome_da_receita"
                        android:textAllCaps="true"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:hint="Modo"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/Ingredientes"
                        android:textColor="#ffffffff"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/update_Ingredientes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textstyle"
                        android:drawablePadding="@dimen/space8"
                        android:hint="-1"
                        android:padding="15dp"
                        android:text="-1"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/update_Ingredientes2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textstyle"
                        android:drawablePadding="@dimen/space8"
                        android:hint="-2"
                        android:padding="15dp"
                        android:text="-2"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/update_Ingredientes3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textstyle"
                        android:drawablePadding="@dimen/space8"
                        android:hint="-3"
                        android:padding="15dp"
                        android:text="-3"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:hint="Modo"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/Modo_de_Preparo"
                        android:textColor="#ffffffff"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/update_Modo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textstyle"
                        android:drawablePadding="@dimen/space8"
                        android:padding="15dp"
                        android:text="-1"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/update_Modo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textstyle"
                        android:drawablePadding="@dimen/space8"
                        android:padding="15dp"
                        android:text="-2"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/update_Modo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="@dimen/space24"
                        android:layout_marginRight="@dimen/space24"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textstyle"
                        android:drawablePadding="@dimen/space8"
                        android:padding="15dp"
                        android:text="-3"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/button_edit_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>


