<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:maxHeight="300dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.33"
            android:background="@drawable/rounded_button"
            android:maxHeight="300dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/send"
                android:padding="10dp"
                app:srcCompat="@drawable/imjen_xml" />

            <EditText
                android:id="@+id/inputEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/Digite_aqe"
                android:inputType="textMultiLine"
                android:maxHeight="300dp"
                android:maxLines="3"
                android:textSize="16sp"
                android:textStyle="italic" />


            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/send"
                android:onClick="imageButtonClick"
                android:padding="10dp"
                app:srcCompat="@drawable/icon_camera_xml" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5.33"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_xml"
                android:contentDescription="@string/send"
                app:srcCompat="@drawable/ic_send" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>